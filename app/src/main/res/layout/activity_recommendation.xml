<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/my_common_top" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_marginTop="6dip"
                android:background="@color/wb_item_line" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dip"
                    android:text="个人信息" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/white_nomal"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="60dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:gravity="center_vertical"
                    android:text="简历名称"
                    android:textColor="@color/color_1c1c1c" />

                <ImageView
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="12dip"
                    android:layout_marginTop="10dip"
                    android:src="@color/gray_bg" />

                <EditText
                    android:id="@+id/recom_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:background="@color/gray_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/white_nomal"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="60dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:gravity="center_vertical"
                    android:text="姓       名"
                    android:textColor="@color/color_1c1c1c" />

                <ImageView
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="12dip"
                    android:layout_marginTop="10dip"
                    android:src="@color/gray_bg" />

                <EditText
                    android:id="@+id/recom_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入"
                    android:maxLength="6"
                    android:singleLine="true"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:background="@color/gray_bg" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/white_nomal"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:text="性       别"
                    android:textColor="@color/color_1c1c1c" />

                <ImageView
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="12dip"
                    android:layout_marginTop="10dip"
                    android:src="@color/gray_bg" />

                <LinearLayout
                    android:id="@+id/recom_sex1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/recom_man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/radiobtn_check" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="男"
                        android:textColor="@color/color_1c1c1c"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dip"
                        android:src="@drawable/boy" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/recom_sex2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/recom_woman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/radiobtn_no_check" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="女"
                        android:textColor="@color/color_1c1c1c"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dip"
                        android:src="@drawable/girl" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:background="@color/gray_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/white_nomal" >

                <TextView
                    android:id="@+id/date_birth_tv"
                    android:layout_width="60dip"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="18dp"
                    android:gravity="center_vertical"
                    android:text="出生日期"
                    android:textColor="@color/color_1c1c1c" />

                <ImageView
                    android:id="@+id/date_birth_img"
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="12dip"
                    android:layout_marginTop="10dip"
                    android:layout_toRightOf="@id/date_birth_tv"
                    android:src="@color/gray_bg" />

                <ImageView
                    android:id="@+id/date_birth_arrow_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/arrow" />

                <TextView
                    android:id="@+id/recom_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@id/date_birth_arrow_img"
                    android:layout_toRightOf="@id/date_birth_img"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择"
                    android:textSize="14sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:background="@color/gray_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:text="现居住地"
                    android:textColor="@color/color_1c1c1c" />

                <ImageView
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="12dip"
                    android:layout_marginTop="10dip"
                    android:src="@color/gray_bg" />

                <EditText
                    android:id="@+id/recom_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:hint="请输入"
                    android:maxLength="36"
                    android:maxLines="3"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:background="@color/gray_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/white_nomal"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="60dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:gravity="center_vertical"
                    android:text="手机号码"
                    android:textColor="@color/color_1c1c1c" />

                <ImageView
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="12dip"
                    android:layout_marginTop="10dip"
                    android:src="@color/gray_bg" />

                <EditText
                    android:id="@+id/recom_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:background="@color/gray_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/white_nomal"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="60dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:gravity="center_vertical"
                    android:text="邮       箱"
                    android:textColor="@color/color_1c1c1c" />

                <ImageView
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="12dip"
                    android:layout_marginTop="10dip"
                    android:src="@color/gray_bg" />

                <EditText
                    android:id="@+id/recom_mailbox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入"
                    android:inputType="textEmailAddress"
                    android:maxLength="32"
                    android:singleLine="true"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:background="@color/gray_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/white_nomal" >

                <TextView
                    android:id="@+id/age_limit_tv"
                    android:layout_width="60dip"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="18dp"
                    android:gravity="center_vertical"
                    android:text="工作年限"
                    android:textColor="@color/color_1c1c1c" />

                <ImageView
                    android:id="@+id/age_limit_img"
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="12dip"
                    android:layout_marginTop="10dip"
                    android:layout_toRightOf="@id/age_limit_tv"
                    android:src="@color/gray_bg" />

                <ImageView
                    android:id="@+id/age_limit_arrow_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/arrow" />

                <TextView
                    android:id="@+id/age_limit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@id/age_limit_arrow_img"
                    android:layout_toRightOf="@id/age_limit_img"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择"
                    android:textSize="14sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/white_nomal"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:text="工作年限"
                    android:textColor="@color/color_1c1c1c" />

                <ImageView
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="12dip"
                    android:layout_marginTop="10dip"
                    android:src="@color/gray_bg" />

                <LinearLayout
                    android:id="@+id/recom_lin1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/recom_img1"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/radiobtn_check" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="小于2年"
                        android:textColor="@color/color_1c1c1c"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/recom_lin2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/recom_img2"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/radiobtn_no_check" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="2~3年"
                        android:textColor="@color/color_1c1c1c"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/recom_lin3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/recom_img3"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/radiobtn_no_check" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="3~5年"
                        android:textColor="@color/color_1c1c1c"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/recom_lin4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/recom_img4"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/radiobtn_no_check" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="5年以上"
                        android:textColor="@color/color_1c1c1c"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:background="@color/gray_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_marginTop="20dip"
                android:background="@color/wb_item_line" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dip"
                    android:text="教育经历" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/white_nomal"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="60dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:gravity="center_vertical"
                    android:text="毕业院校"
                    android:textColor="@color/color_1c1c1c" />

                <ImageView
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="12dip"
                    android:layout_marginTop="10dip"
                    android:src="@color/gray_bg" />

                <EditText
                    android:id="@+id/recom_school"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:background="@color/gray_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/white_nomal"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="60dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="所学专业"
                    android:textColor="@color/color_1c1c1c" />

                <ImageView
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="12dip"
                    android:layout_marginTop="10dip"
                    android:src="@color/gray_bg" />

                <EditText
                    android:id="@+id/recom_professional"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入"
                    android:maxLength="16"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:background="@color/gray_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_marginTop="20dip"
                android:background="@color/wb_item_line"
                android:visibility="gone" >

                <TextView
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dip"
                    android:text="工作经验" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_marginTop="20dip"
                android:background="@color/wb_item_line" >

                <TextView
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dip"
                    android:text="备        注" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/white_nomal"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:gravity="center_vertical"
                    android:text="预约时间:"
                    android:textColor="@color/color_1c1c1c" />

                <TextView
                    android:id="@+id/recom_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:textSize="14sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_marginTop="14dp"
                android:background="@drawable/white_nomal" >

                <EditText
                    android:id="@+id/recom_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/remarks_bg"
                    android:gravity="top"
                    android:hint="补充"
                    android:maxLength="140"
                    android:maxLines="10"
                    android:minHeight="80dp"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>